.sql
	SELECT topic, count(h.status_begin_dt) checkoutCount
	FROM temp_union t
	LEFT JOIN biblio_status_hist h
		ON t.bibid = h.bibid
		AND h.status_cd = 'out'
.	if_set dt_start
		WHERE h.status_begin_dt >= %dt_start%
.	end if_set
	GROUP BY t.topic
.	order_by_expr
.end sql
.sql
	DROP TABLE temp_union
.end sql
